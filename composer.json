{
    "name": "lakion/api-test-case",
    "description": "Perfect TestCase for JSON API TDD with Symfony.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name":     "Łukasz Chruściel",
            "email":    "lukasz.chrusciel@lakion.com"
        },
        {
            "name":     "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name":     "Michał Marcinkowski",
            "email":    "michal.marcinkowski@lakion.com"
        }
    ],
    "require": {
        "coduo/php-matcher": "dev-php7-support",
        "phpspec/php-diff": "^1.0",
        "phpunit/phpunit": "^4.8",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "symfony/framework-bundle": "^2.3|^3.0",
        "symfony/finder": "^2.3|^3.0",
        "symfony/browser-kit": "^2.3|^3.0",
        "nelmio/alice": "@dev",
        "doctrine/orm": "^2.4.8",
        "doctrine/data-fixtures": "^1.1",
        "doctrine/doctrine-bundle": "^1.6",
        "symfony/console": "^2.3|^3.0",
        "symfony/serializer": "^2.3|^3.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:lchrusciel/php-matcher.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:lchrusciel/php-to-string.git"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Lakion\\ApiTestCase\\": "src/",
            "Lakion\\ApiTestCase\\Test\\": "test/src/"
        }
    },
    "minimum-stability": "dev"
}
